{
    "name": "basekit/signed-url",
    "description": "Generate secure URLs with an expiration",
    "keywords": [
        "basekit",
        "signed-url"
    ],
    "homepage": "https://github.com/basekit/signed-url",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Mills",
            "email": "rob.mills@basekit.com",
            "homepage": "https://basekit.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.3 || ~8.0",
        "league/uri": "^6.0",
        "league/uri-components": "^2.2"
    },
    "require-dev": {
        "php-mock/php-mock-phpunit": "^2.6",
        "phpstan/phpstan": "^1.5",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^4.22"
    },
    "autoload": {
        "psr-4": {
            "BaseKit\\SignedUrl\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BaseKit\\SignedUrl\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --level=5 src tests",
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
